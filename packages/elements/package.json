{
  "name": "@personalizer/elements",
  "version": "0.2.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./register": {
      "types": "./dist/register.d.ts",
      "default": "./dist/register.js"
    },
    "./bundle": "./dist/personalizer-editor.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && esbuild src/register.ts --bundle --format=esm --outfile=dist/personalizer-editor.js",
    "test": "node -e \"console.log('elements: no tests')\"",
    "typecheck": "tsc -p tsconfig.build.json --noEmit"
  },
  "dependencies": {
    "@personalizer/core": "workspace:*",
    "@personalizer/renderer-canvas": "workspace:*"
  },
  "devDependencies": {
    "esbuild": "^0.25.0",
    "typescript": "^5.7.3"
  }
}
