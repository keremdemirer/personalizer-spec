{
  "spec": "personalizer.design.v1",
  "templateId": "demo",
  "templateVersion": "1.0.0",
  "assets": {
    "fonts": [{ "id": "font_1", "src": "https://cdn.example/fonts/inter.woff2" }],
    "images": [{ "id": "mockup", "src": "https://cdn.example/images/mockup.png" }]
  },
  "scenes": [
    {
      "sceneId": "pdp",
      "group": "PDP",
      "canvas": { "size": { "w": 1200, "h": 1200, "unit": "px" }, "dpi": 96 },
      "background": [{ "$ref": "node:bg" }],
      "overlay": [],
      "design": { "$ref": "node:root" },
      "designOverlay": []
    }
  ],
  "nodes": {
    "bg": {
      "id": "bg",
      "type": "image",
      "rect": { "x": 0, "y": 0, "w": 100, "h": 100, "unit": "pct" },
      "image": { "assetRef": "mockup" }
    },
    "root": {
      "id": "root",
      "type": "container",
      "rect": { "x": 10, "y": 10, "w": 80, "h": 80, "unit": "pct" },
      "children": [{ "$ref": "node:name" }]
    },
    "name": {
      "id": "name",
      "type": "text",
      "rect": { "x": 10, "y": 10, "w": 80, "h": 20, "unit": "pct" },
      "text": {
        "body": { "$bind": "inputs.name" },
        "fontRef": "font_1",
        "size": 48,
        "color": "#FFFFFFFF"
      },
      "opacity": 100
    }
  }
}
